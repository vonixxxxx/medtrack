{
  "name": "medtrack-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "MedTrack - Medication Tracking Application (Vercel Monorepo)",
  "scripts": {
    "dev": "npx vercel dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:api": "cd api && npx vercel dev",
    "dev:both": "concurrently \"npm run dev:frontend\" \"npm run dev:api\"",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../api && npm install",
    "typecheck": "cd frontend && npm run typecheck"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.x"
  }
}
