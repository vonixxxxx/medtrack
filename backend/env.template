# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/medtrack?schema=public"

# Authentication
JWT_SECRET="your-super-secure-secret-key-at-least-256-bits-long"
JWT_EXPIRES_IN="7d"

# Email Configuration (for password reset)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="MedTrack <noreply@medtrack.com>"

# App Configuration
PORT=4000
NODE_ENV="production"
FRONTEND_URL="https://your-frontend-domain.com"

# 2FA Configuration
TOTP_ISSUER="MedTrack"
TOTP_WINDOW=2

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Security
CORS_ORIGIN="https://your-frontend-domain.com"

# LLM API Keys (optional - will fallback to rule-based summarization if not provided)
OPENAI_API_KEY=""
HUGGINGFACE_API_KEY="your_huggingface_token_here"
HUGGINGFACE_MODEL="meta-llama/Llama-3.1-8B-Instruct"
