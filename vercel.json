{
  "buildCommand": "bash build.sh",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install && cd frontend && npm install --include=dev && cd ../api && npm install",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  }
}
